<script src="/frontend/static/assets/js/information.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDn78lQzj3Q3UF5Q1J4_e4u1T5BliSpN3o"></script>
<script>
  
  function initMap() {
    // Coordenadas del local "OrigenTattooStudio"
    var localCoords = { lat: 6.22948663895206, lng: -75.57057652023752 };

    // Crear un mapa centrado en esas coordenadas
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15, // Nivel de zoom
      center: localCoords // Centrar el mapa en las coordenadas del local
    });

    // Marcador en la ubicación del local
    var marker = new google.maps.Marker({
      position: localCoords,
      map: map,
      title: 'OrigenTattooStudio' // Puedes agregar un título al marcador
    });
  }

  // Llama a la función initMap una vez que se cargue el API de Google Maps
  google.maps.event.addDomListener(window, 'load', initMap);
</script>
